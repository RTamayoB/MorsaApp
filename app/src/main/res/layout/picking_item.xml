<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/picking_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lato_regular"
        android:text="#0234"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/picking_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/lato_regular"
        android:text="Recibido: 2019/10/15"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/picking_imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/picking_box_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lato_regular"
        android:text="Cajas: 4"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/picking_name_txt" />

    <TextView
        android:id="@+id/picking_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/lato_regular"
        android:text="09:00"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/picking_imageView4"
        app:layout_constraintTop_toBottomOf="@+id/picking_date_txt" />

    <ImageView
        android:id="@+id/picking_imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/calendar_img" />

    <ImageView
        android:id="@+id/picking_imageView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/picking_imageView2"
        app:srcCompat="@drawable/clock_img" />

</androidx.constraintlayout.widget.ConstraintLayout>